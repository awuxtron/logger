{
    "name": "@awuxtron/logger",
    "description": "A Winston wrapper with additional features",
    "version": "0.0.1-alpha",
    "type": "module",
    "keywords": [
        "logger",
        "winston"
    ],
    "homepage": "https://github.com/awuxtron/logger#readme",
    "repository": "github:awuxtron/logger",
    "bugs": {
        "email": "awuxtron@gmail.com",
        "url": "https://github.com/awuxtron/logger/issues"
    },
    "license": "MIT",
    "author": "Diep Dang <awuxtron@gmail.com> (https://awuxtron.dev)",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc --noEmit && tsup src/index.ts --dts --sourcemap --format esm,cjs",
        "prepublishOnly": "npm run build",
        "release": "bumpp && npm publish"
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "peerDependencies": {
        "winston": ">=3.0"
    },
    "dependencies": {
        "bottleneck": "^2.19.5",
        "chalk": "^5.2.0",
        "fecha": "^4.2.3",
        "node-fetch": "^3.3.1",
        "serialize-error": "^11.0.0",
        "telegram-format": "^2.1.0",
        "winston-daily-rotate-file": "^4.7.1",
        "winston-transport": "^4.5.0"
    },
    "devDependencies": {
        "@types/node": "^20.2.5",
        "bumpp": "^9.1.0",
        "logform": "^2.5.1",
        "tsup": "^6.7.0",
        "typescript": "^5.0.4",
        "winston": "^3.9.0"
    }
}
